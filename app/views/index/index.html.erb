<h1>Alphabet Challenge</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th scope="col">Letter</th>
    <th scope="col">Male</th>
    <th scope="col">Female</th>
  </tr>
  <% ("A".."Z").each do |letter| %>
    <tr>
      <th scope="row">
        <div class="form-check">
          <%= check_box_tag "letter_#{letter}", 1, false, autocomplete: 'off', class: 'form-check-input' %>
          <%= label :letter, "#{letter}", class: 'form-check-label' %>
        </div>
      </th>
      <td>
        <span><%= male(letter) %></span>
      </td>
      <td>
        <span><%= female(letter) %></span>
      </td>
    </tr>
  <% end %>
</table>